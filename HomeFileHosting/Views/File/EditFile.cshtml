@using HomeFileHosting.Models
@model FileInformationEditModel
@{
    ViewBag.Title = "EditFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditFile</h2>
<div class="row">
    @using (Html.BeginForm("EditFile", "File", new { id = ViewBag.EditFile.Id }, FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", value = ViewBag.EditFile.Name })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Private, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.Private, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Private, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    }
</div>